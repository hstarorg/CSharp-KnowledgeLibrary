$border-color = #e0e1e5;

$no-select-text {
  user-select: none;
}

.page-main {
  .top-header {
    position: fixed;
    top: 0;
    width: 100%;
    height: 50px;
    background: #398dee;
    h2 {
      margin: 0;
      margin-left: 18px;
      color: #fff;
      line-height: 50px;
      font-family: 'STKaiti';
    }
  }
  .main-container {
    position: absolute;
    top: 50px;
    bottom: 0;
    width: 100%;
    min-width: 720px;
  }
  .left-sidebar {
    position: relative;
    width: 240px;
    height: 100%;
    background: #f5f5f5;
    border-right: 1px solid $border-color;
    @extend $no-select-text;
    .file-tree-toggle {
      position: absolute;
      right: -16px;
      bottom: 5px;
      display: inline-block;
      width: 16px;
      height: 26px;
      line-height: 26px;
      text-align: center;
      border: 1px solid #e0e1e5;
      border-left: none;
      border-radius: 0 4px 4px 0;
      background-color: #f5f5f5;
      cursor: pointer;
      z-index: 50;
      color: #909090;
    }
  }
  .drag-line {
    position: absolute;
    top: 0;
    right: -4px;
    height: 100%;
    width: 7px;
    cursor: col-resize;
    z-index: 1;
  }
  .right-viewport {
    position: absolute;
    top: 0;
    height: 100%;
    left: 240px;
    right: 0;
    min-width: 520px;
    @extend $no-select-text;
  }
  .note-list {
    position: relative;
    width: 320px;
    height: 100%;
    border-right: 1px solid $border-color;
    background-color: #fff;
  }
  .note-view {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 320px;
  }
}

