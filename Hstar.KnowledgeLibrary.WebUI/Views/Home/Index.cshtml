@model dynamic

@{
    ViewBag.Title = "知识库首页";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section FootPartialSection
{
<script src="~/Scripts/angular/controllers/HomeIndex.js"></script>
<script src="~/Scripts/angular/filters/TitleCaseFilter.js"></script>
}
<div ng-controller="HomeIndex" class="container" style="margin-top: 60px;border-left:1px solid green;border-right:1px solid green;">
    <div class="row text-center">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="请输入关键字">
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="button">搜索一下</button>
                </span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <div class="panel panel-default">
                <div class="panel-heading">知识分类</div>
                <div class="panel-body"></div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">知识达人</div>
                <div class="panel-body"></div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">友情链接</div>
                <div class="panel-body"></div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">统计信息</div>
                <div class="panel-body"></div>
            </div>
        </div>
        <div class="col-md-7">
            <div ng-repeat="item in items">
                <div class="col-md-12">{{item.name | titleCase}}</div>
            </div>
            <ul class="pagination pagination-sm" ng-repeat="item in items">
                <li><a href="#">{{$index+1}}</a></li>

            </ul>
        </div>
        <div class="col-md-3">
            <div class="panel panel-default">
                <div class="panel-heading">热门知识<a href="#" class="pull-right">更多</a></div>
                <div class="panel-body"></div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">最新知识<a href="#" class="pull-right">更多</a></div>
                <div class="panel-body"></div>
            </div>
        </div>
    </div>
</div>
